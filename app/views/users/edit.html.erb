<h1>User info</h1>
<% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= @user.errors.count %>errors prohibited this obj from being saved:
</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    
<% end %>
 <%= form_for(@user) do |f| %>
 <div class="form-group has-icon">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  </div>
  
 <div class="form-group has-icon">
  <label class="control-label sr-only" for="inputEmail">ProfileImage</label><br>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
</div>

 <div class="form-group has-icon">
     <div class="form-group has-icon">
        <%= f.label :name %><br />
        <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"Introduction"%>
  </div>
   <%= f.submit 'Update User'%>
 <% end %>